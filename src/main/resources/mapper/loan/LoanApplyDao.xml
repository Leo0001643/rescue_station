<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.modules.loan.dao.LoanApplyDao">

    <!-- 字段集 -->
    <sql id="baseSql">
        select id, chat_id, billno, username, realname, phone, identity_id, home_address, home_revenue, loan_amount, reason, create_time from loan_apply
    </sql>

    <!-- 查询列表字段 -->
    <select id="queryList" resultType="com.platform.modules.loan.domain.LoanApply">
        <include refid="baseSql"/>
        <where>
            <if test="chatId != null">
                and chat_id = #{chatId}
            </if>
            <if test="phone != null">
                and phone = #{phone}
            </if>
            <if test="realname != null">
                and realname = #{realname}
            </if>
        </where>
    </select>

</mapper>
